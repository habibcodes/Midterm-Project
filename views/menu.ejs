<html>
  <head>
    <!-- from head partial -->
    <%- include('partials/head.ejs') %>

    <!-- Local CSS -->

    <link rel="stylesheet" href="/styles/menu.css" type="text/css" />
    <!-- Local Scripts -->

    <script type="text/javascript" src="/scripts/cart.js" async></script>

    <title>Menu</title>
    
  </head>

  <body>

    <%- include('partials/_header.ejs')  %> 

    <!-- Main -->
    <div class="container">
      <h4>Menu</h4>
        <table>
          <div class="row">
            <% for(let item in items) { %>
              <tr>
                <div class="col">
                  <td>
                    <img src="<%= items[item].img%>" alt="" class="card-img-top">
                  </td>
                </div>
                <div class="col">
                  <td>
                    <p class="card-title">
                      <%= items[item].name%>
                    </p>
                  </td>
                </div>
                <div class="col">
                  <td>
                    <p class="card-text">
                      $<%= Number(items[item].price).toFixed(2)%>
                    </p>
                  </td>
                </div>
                <div class="col">
                  <td>
                    <a href="#" data-name="<%= items[item].name%>" data-price="<%= items[item].price%>" class="add-to-cart btn btn-primary">Add to cart
                    </a>
                  </td>
                </div>
              </tr>
              <!-- <tr>
                <div class="col">
                  <td>
                    <img class="card-img-top" src="<%= items[item].img%>">
                  </td>
                  <div>
                    <td>
                      <p class="card-title">
                        <%= items[item].name%>
                      </p>
                    </td>
                    <td>
                      <p class="card-text">
                        $<%= Number(items[item].price).toFixed(2)%>
                      </p>
                    </td>
                    <td>
                      <a href="#" data-name="<%= items[item].name%>" data-price="<%= items[item].price%>" class="add-to-cart btn btn-primary">Add to cart
                      </a>
                    </td>
              </tr>
                </div>
              </div>
          </div> -->
        <% } %>
        </div>
      </table>
    </div>


    <!-- Pop-up Cart -->
    <div class="modal fade" id="cart" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Cart</h5>
          </div>

          <div class="modal-body">
            <table class="show-cart table">
            </table>
            <div>
              Total price: $<span class="total-cart"></span>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
              Close
            </button>
            <button type="button" class="btn btn-primary">
              Place Order
            </button>
          </div>

        </div>
      </div>
    </div>

  </body>
</html>